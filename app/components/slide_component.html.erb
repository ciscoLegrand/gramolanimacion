<div class="swiper-slide flex flex-col justify-center">
  <%= link_to item do %>
    <div class="w-full flex items-center justify-center h-96 bg-cover rounded-t-2xl" style="background-image: url(<%= url_for(item.images.first) %>)">
      <button class="p-2 rounded-full bg-blue-600 text-white  hover:bg-blue-500 focus:outline-none focus:bg-blue-500 absolute bottom-12 right-8">
          <svg class="h-9 w-9" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor"><path d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
      </button>
    </div>
    <div class="px-5 py-3 flex flex-row justify-between">
      <div class="flex flex-col">
        <h3 class="text-gray-700 uppercase"><%= item.name %></h3>
        <span class="text-gray-500 mt-2"><%= item.category_name %></span>
      </div>
      <div class="flex flex-row">
        <span class="title-font font-medium text-2xl text-gray-900"><%= number_to_currency item.price %></span>
        <span class="title-font font-medium text-lg text-gray-400 line-through"><%= number_to_currency item.initial_price if item.discount > 0 %></span>
      </div>
      <div class="flex"></div>
    </div>
  <% end %>
</div>