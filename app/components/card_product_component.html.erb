<div class="w-full max-w-sm mx-auto rounded-md shadow-md overflow-hidden transition-transform duration-500 delay-200 hover:scale-110">
  <%= link_to site_product_path(Category.find(product.category_id),Product.find(product.id)) do %>
    <div class="flex items-end justify-end h-56 w-full bg-cover" style="background-image: url(<%= url_for(product.images.first) %>)">
      <button class="h-12 w-12 p-2 rounded-full bg-blue-600 text-white mx-5 -mb-4 hover:bg-blue-500 focus:outline-none focus:bg-blue-500 flex justify-center items-center">
        <%= inline_svg_tag('icons/ico-chevron-right.svg', size: '34')%>
      </button>
    </div>
    <div class="flex flex-col">
      <h3 class="text-gray-700 uppercase"><%= product.name %></h3>
      <span class="text-gray-500 mt-2"><%= product.category_name %></span>
    </div>
    <div class="flex flex-row">
      <span class="title-font font-medium text-2xl text-gray-900"><%= number_to_currency product.price %></span>
      <span class="title-font font-medium text-lg text-gray-400 line-through"><%= number_to_currency product.initial_price if product.discount > 0 %></span>
    </div>
    <div class="flex"></div>
  <% end %>
</div>