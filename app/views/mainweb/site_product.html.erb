<!-- component -->
<section class="container mt-6 text-gray-700 body-font overflow-hidden bg-white">
  <div class="px-5 py-24 mx-auto">
    <div class="lg:w-4/5 mx-auto flex flex-wrap">
      <!--product_image_compoent-->
      <figure class="relative lg:w-1/2 w-full object-cover object-center rounded border border-gray-200">        
        <%= image_tag(url_for(@product.images.first), class: "w-full")%>
        <%  if @product.discount > 0 %>
          <span class="absolute top-3 right-3 title-font font-medium text-lg text-white bg-red-500 p-3 rounded-full flex justify-center items-center"><%= @product.discount.to_i %>%</span>  
        <% end %>             
      </figure>
        <!-- end product_image_component--->
      <div class="lg:w-1/2 w-full lg:pl-10 lg:py-6 mt-6 lg:mt-0">
        <h2 class="text-sm title-font text-gray-500 tracking-widest"><%= @product.category_name %></h2>
        <h1 class="text-gray-900 text-3xl title-font font-medium mb-1"><%= @product.name %></h1>
        <div class="flex mt-6 items-center p-5 border-t-2 border-b-2 border-gray-200 my-5">
          <!---description_component-->
          <div class="flex ml-6 items-center">
            <div class="relative" data-controller="dropdown">
              <div class="text-gray-600 text-xl font-medium cursor-pointer " data-action="click->dropdown#display_product_features" aria-haspopup="true" aria-controls="dropdown-features" >Description</div>
              <div data-dropdown-target="productfeatures"  class="hidden flex justify-center">
                <%= @product.description %>
              </div>
            </div>
          </div>
          <!--end description_component--->
        </div>
        <!---review_component-->
        <% if 1 == 0 %>
          <div class="flex mb-4">
            <span class="flex items-center">
              <svg fill="currentColor" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 text-red-500" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
              </svg>
              <svg fill="currentColor" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 text-red-500" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
              </svg>
              <svg fill="currentColor" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 text-red-500" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
              </svg>
              <svg fill="currentColor" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 text-red-500" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
              </svg>
              <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 text-red-500" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
              </svg>
              <span class="text-gray-600 ml-3">4 Reviews</span>
            </span>
            <!---end review_component-->
            <!---social_media_component-->
            <span class="flex ml-3 pl-3 py-2 border-l-2 border-gray-200">
              <%= render SocialIconComponent.new(icon: 'ico-facebook.svg', size: '32', color: 'bg-indigo-500', href: root_path) %>
              <%= render SocialIconComponent.new(icon: 'ico-twitter.svg', size: '32', color: 'bg-blue-500', href: products_path) %>
              <%= render SocialIconComponent.new(icon: 'ico-message.svg', size: '32', color: 'bg-red-500', href: categories_path) %>
            </span>
            <!---end social_medida_component--->
          </div>
        <% end %>
        <!---price_buy_component-->
        <div class="flex">
          <span class="title-font font-medium text-2xl text-gray-900"><%= number_to_currency @product.price %></span>
          <span class="title-font font-medium text-lg text-gray-400 line-through"><%= number_to_currency @product.initial_price %></span>
          <%= link_to 'Inscribirme', new_order_path(@product), class:"flex ml-auto text-white bg-red-500 border-0 py-2 px-6 focus:outline-none hover:bg-red-600 rounded justify-center items-center"%>
          <button class="rounded-full w-10 h-10 bg-gray-200 p-0 border-0 inline-flex items-center justify-center text-gray-500 ml-4">
            <svg fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-5 h-5" viewBox="0 0 24 24">
              <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"></path>
            </svg>
          </button>
        </div>
        <!--end price_buy_component --->
      </div>
    </div>
  </div>
</section>

<section class="container text-gray-700 body-font overflow-hidden bg-white">
  <h3 class="text-gray-600 text-2xl font-medium flex justify-center">More Products</h3>
  <div class="relative" data-controller="swiper">
    <div class="swiper" data-swiper-target="container">
      <div class="swiper-wrapper">
        <!-- product_card_component --->
        <%= render(SlideComponent.with_collection(@products))%>
        <!---end product_card_component--->
      </div>
    </div>
    <% if @products.count > 1 %>
      <!-- Add Arrows -->
      <div class="swiper-button-prev" data-swiper-target="prev"></div>
      <div class="swiper-button-next" data-swiper-target="next"></div>
    <% end %>
  </div>
</section> 