<div class="block p-6 rounded-lg shadow-lg bg-white">
  <%= form_with(model: @data_enterprise,local: true, data: {turbo: false}, html: {multipart: true} ) do |f| %>
    <!-- render rails error form  --->

    <div class="md:flex items-center mt-12">
      <div class="w-full md:w-1/3 flex flex-col">
        <%= f.label :commercial_name, class: 'label font-semibold leading-none' %>
        <%= f.text_field :commercial_name, class: 'textfield leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200', required: true %>
      </div>
      <div class="w-full md:w-1/3 flex flex-col">
        <%= f.label :business_name, class: 'label font-semibold leading-none' %>
        <%= f.text_field :business_name, class: 'textfield leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200', required: true %>
      </div>
      <div class="w-full md:w-1/3 flex flex-col md:ml-6 md:mt-0 mt-4">
        <%= f.label :nif, class: 'label font-semibold leading-none' %>
        <%= f.text_field :nif, placeholder: 0.00, class: 'textfield leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200' %>
      </div>
    </div>
    <div class="md:flex items-center mt-12">
      <div class="w-full md:w-1/2 flex flex-col">
        <%= f.label :meta_title, class: 'label font-semibold leading-none' %>
        <%= f.text_field :meta_title, class: 'textfield leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200', required: true %>
      </div>
      <div class="w-full md:w-1/2 flex flex-col md:ml-6 md:mt-0 mt-4">
        <%= f.label :meta_description, class: 'label font-semibold leading-none' %>
        <%= f.text_field :meta_description, class: 'textfield leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200' %>
      </div>
    </div>
    <div class="md:flex items-center mt-12">
      <%= f.file_field :logo %>
    </div>

    <%= f.submit nil, class: 'button-primary' %>   
  <% end %>
</div>
