<div class="block p-6 rounded-lg shadow-lg bg-white">
  <%= form_with(model: [@email_base_template, @email_custom_template],local: true, data: {turbo: false} ) do |f| %>
    <div class="form-group mb-6">
      <%= f.label :title, class: 'label' %>
      <%= f.text_field :title, class: 'textfield', value: @email_base_template.title, readonly: true %>
      <%= f.label :kind, class: 'label' %>
      <%= f.text_field :kind, value: @email_base_template.kind, class: 'textfield', readonly: true %>
    </div>
    <%= f.hidden_field :email_base_template_id, value: @email_base_template.id %> 
    <div class="form-group mb-6">
        <%= f.label :content, class: 'label' %>          
        <%= f.rich_text_area :content %>
    </div>
    <%= f.submit nil, class: 'button-primary' %>   
  <% end %>
</div>
