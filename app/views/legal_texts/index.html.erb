<div class="container">
  <div class="flex fle-col" data-controller="launch-modal">
    <%= turbo_frame_tag 'legal_texts',class:'w-full' do %>
      <h1 class="font-bold text-4xl text-center mt-6 mb-6">Textos Legales</div>
    <% end %>

    <%= button_to 'new', new_legal_text_path, method: :get, data: { turbo_frame: 'modal' },class: 'button-primary float-left' %>
    <%= turbo_frame_tag LegalText.new %>

    <%= render TableComponent.new(headers: @headers) do |table| %>
      <%= @legal_texts.each do |legal_text|%>
        <%= table.row(cells: object_to_table_cells(legal_text, @attrs)) do  |row| %>
          <% row.actions do %>
            <div class="flex flex-row justify-end">
              <% if action_name != "show" %>
                <%= link_to "Show", legal_text,data: { turbo_frame: 'modal' }, class: "button-primary mr-4" %>
                <%= link_to 'Edit', edit_legal_text_path(legal_text), data: { turbo_frame: 'modal' }, class: "button-primary mr-4" %>
                <%= button_to 'Delete', legal_text_path(legal_text), method: :delete, class: 'button-decline mr-4' %>
              <% end %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>