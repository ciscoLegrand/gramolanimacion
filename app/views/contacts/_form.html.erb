<!-- component -->
<div class="w-full">
  <div class="bg-gradient-to-b from-blue-800 to-blue-600 h-96 w-full"></div>
  <div class="max-w-5xl mx-auto px-6 sm:px-6 lg:px-8 mb-12">
    <div class="bg-white w-full shadow-xl rounded p-8 sm:p-12 -mt-72">
      <p class="text-3xl font-bold leading-7 text-center">Contact me</p>
      <%= form_with(model: @contact,local: true, data: {turbo: false} ) do |f| %>
        <!-- render rails error form  --->
        <% if @contact.errors.any? %>
        <div class="bg-red-100 border-t border-b border-red-500 text-red-700 px-4 py-3" role="alert">
          <p class="font-bold"><%= t 'activerecord.errors.template.body' %></p>
        </div>
          <div id="error_explanation">
            <% @contact.errors.messages.values.flatten.each do |msg| %>
              <div class="flex items-center bg-red-100 text-red-700 text-sm font-bold px-4 py-3" role="alert">
                <%= inline_svg_tag('icons/ico-exclamation-triangle.svg', class: 'fill-current w-4 h-4 mr-2 text-red-700')%>
                <p><%= msg %></p>
              </div>
            <% end %>
          </div>
        <% end %>
        <div class="md:flex items-center mt-12">
          <div class="w-full md:w-1/2 flex flex-col">
            <%= f.label :name, class: 'label font-semibold leading-none' %>
            <%= f.text_field :name, class: 'textfield leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200' %>
          </div>
          <div class="w-full md:w-1/2 flex flex-col md:ml-6 md:mt-0 mt-4">
            <%= f.label :last_name, class: 'label font-semibold leading-none' %>
            <%= f.text_field :last_name, class: 'textfield leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200' %>
          </div>
        </div>
        <div class="md:flex items-center mt-12">
          <div class="w-full md:w-1/2 flex flex-col">
            <%= f.label :email, class: 'label font-semibold leading-none' %>
            <%= f.text_field :email, class: 'textfield leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200' %>
          </div>
          <div class="w-full md:w-1/2 flex flex-col md:ml-6 md:mt-0 mt-4">
            <%= f.label :phone, class: 'label font-semibold leading-none' %>
            <%= f.text_field :phone, class: 'textfield leading-none text-gray-900 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200' %>    
          </div>
        </div>
        <div>
          <div class="w-full flex flex-col mt-8">
            <%= f.label :content, class: 'label font-semibold leading-none' %>          
            <%= f.rich_text_area :content, class: 'h-40 text-base leading-none text-gray-900 p-3 focus:oultine-none focus:border-blue-700 mt-4 bg-gray-100 border rounded border-gray-200' %>
          </div>
        </div>
        <div class="flex items-center justify-center w-full">
          <%= f.submit nil, class: 'mt-9 font-semibold leading-none text-white py-4 px-10 bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none' %>
        </div>
      <% end %>
    </div>
  </div>
</div>